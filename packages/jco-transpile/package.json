{
    "name": "@bytecodealliance/jco-transpile",
    "version": "0.1.2",
    "description": "WebAssembly Component transpilation functionality for Jco",
    "keywords": [
        "Component",
        "Wasm",
        "WebAssembly"
    ],
    "homepage": "https://github.com/bytecodealliance/jco#readme",
    "bugs": {
        "url": "https://github.com/bytecodealliance/jco/issues"
    },
    "license": "(Apache-2.0 WITH LLVM-exception)",
    "contributors": [
        {
            "name": "Guy Bedford"
        },
        {
            "name": "Eduardo Rodrigues",
            "email": "16357187+eduardomourar@users.noreply.github.com"
        },
        {
            "name": "Victor Adossi",
            "email": "vadossi@cosmonic.com"
        }
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/bytecodealliance/jco.git"
    },
    "files": [
        "dist",
        "vendor"
    ],
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "default": "./dist/index.js"
        },
        "./helpers": {
            "types": "./dist/helpers.d.ts",
            "default": "./dist/helpers.js"
        }
    },
    "scripts": {
        "setup:jco:build": "npm run -w @bytecodealliance/jco build:release",
        "setup:jco:vendor": "npm run setup:jco:build && cp ../jco/obj/*.core*.wasm vendor && cp ../jco/obj/*.js vendor && cp ../jco/obj/*.ts vendor && cp -r ../jco/obj/interfaces vendor",
        "build:vendor": "node scripts/setup-vendor.mjs",
        "fmt": "oxfmt",
        "fmt:check": "oxfmt --check",
        "lint": "oxlint",
        "lint:fix": "npm run lint -- --fix",
        "build:ts": "tsc -p tsconfig.json",
        "build": "npm run build:vendor && npm run build:ts",
        "test": "vitest run -c test/vitest.ts",
        "prepack": "npm run setup:jco:vendor && npm run build"
    },
    "dependencies": {
        "@bytecodealliance/preview2-shim": "^0.17.5",
        "terser": "^5"
    },
    "devDependencies": {
        "@npmcli/run-script": "^10.0.2",
        "@types/node": "^24.10.0",
        "vite": "^7.1.5",
        "vitest": "^4.0.7"
    }
}
