{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "src/cmd/**", "src/*.d.ts", "src/**/*.d.ts"],
  "compilerOptions": {
    "outDir": "types",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "skipLibCheck": true
  }
}
