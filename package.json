    "mkdirp": "^1.0.4",
    "ora": "^6.1.2",
    "terser": "^5.16.1"
  },
  "devDependencies": {
    "@bytecodealliance/componentize-js": "0.0.7",
    "@types/node": "^18.11.17",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "eslint": "^8.30.0",
    "mocha": "^10.2.0",
    "terser": "^5.16.1",
    "typescript": "^4.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytecodealliance/jco.git"
  },
  "keywords": [
    "Wasm",
    "WebAssembly",
    "Component"
  ],
  "license": "(Apache-2.0 WITH LLVM-exception)",
  "bugs": {
    "url": "https://github.com/bytecodealliance/jco/issues"
